*@
@{
}

@{
    ViewData["Title"] = "Vinhbucks";
}
<h1 class="text-center"   >@ViewData["Title"]</h1>

<h1 class="text-center"  >Menu</h1>

@{

    foreach(Product p in Model)
    {
    <div class="text-center"   >
                <h2>@p.Name</h2>
                <h2>US$@p.Price</h2>
                <h2>@p.Category</h2>      
                
                <a asp-controller="Product" asp-action="Detail" asp-route-productId="@p.Id">Click to view more</a>         
                
    </div>

    }



}